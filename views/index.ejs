                        <!-- LIST GROUP ITEM -->
                        <div class="list-group-item py-3">
                            <div class="pb-2"> <!-- padding at bottom -->
                                <i class="bi bi-star-fill text-dark"></i>
                                <i class="bi bi-star-fill text-dark"></i>
                                <i class="bi bi-star-fill text-dark"></i>
